// MAIN FUNCTIONS

let calculator = function (operation, num1, num2) {
  if (operation === "addition") {
    console.log(num1 + num2); // unnecessary but allows you to call calculator function and get a return
    return addition(num1, num2);
  } else if (operation === "subtraction") {
    return subtraction(num1, num2);
  } else if (operation === "multiplication") {
    return multiplication(num1, num2);
  } else if (operation === "division") return division(num1, num2);
  // showing that we dont need to use curlies but they help you see code
  else {
    return "thats out my scope of function babbbyyyyyy";
  }
};
// console.log(addition(1, 2));
// HELPER FUNCTIONS

function addition(num1, num2) {
  return num1 + num2;
}

function subtraction(num1, num2) {
  return num1 - num2;
}

function multiplication(num1, num2) {
  return num1 * num2;
}
function division(num1, num2) {
  return num1 / num2;
}

console.log(calculator("subtraction", 3, 5));
console.log(calculator("division", "brown", 5));

